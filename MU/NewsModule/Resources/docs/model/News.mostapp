application "News" {
	vendor "MU"
	author "Michael Ueberschaer"
	email "info@homepages-mit-zikula.de"
	url "https://homepages-mit-zikula.de"
    version "1.1.0"
	prefix "news"
	generatorSettings  {
        settingsContainer "Einstellungen"
	    targetCoreVersion ZK15
       generateMailzApi true
        generateNewsletterPlugin true
        generateTagSupport true
        generateMultiHookNeedles true
        generateKmlTemplates false
        generateIcsTemplates true
        filterHookProvider ENABLED
        versionAllGeneratedFiles false
        separateAdminTemplates true
        generatePoweredByBacklinksIntoFooterTemplates false
    generateTests false
        markFiles "NewsModuleInstaller.php,\r\nResources/public/css/style.css,\r\nResources/views/Message/display.html.twig,\r\nResources/views/Message/edit.html.twig,\r\nResources/views/Message/view.html.twig"
    }
    entities {
        entity "message" leading categorisable categorisableMultiSelection attributable {
            nameMultiple "messages"
            displayPattern "#title#"
					slugUnique false
            workflow STANDARD
            hasArchive true
            hasTray true
            formAwareHookProvider ENABLED
            fields {
					    string "title" translatable {
                    sluggablePosition 1
                },				    
						text "startText" translatable {
                    length 10000
						},
						upload "imageUpload1" {
							defaultValue ""
							mandatory false
							maxSize "200k"
						},
						text "mainText" translatable {
                    defaultValue ""
							mandatory false
							length 20000
						},
                integer "amountOfViews" {
                    defaultValue "0"
                mandatory false
                    displayType VIEW_DISPLAY
                },
                string "author" {
                    length 100
                },
                user "approver" nullable {
                    mandatory false
                },
                text "notes" {
                    mandatory false
                },
                boolean "displayOnIndex" ajaxTogglability {
                    defaultValue "1"
                    mandatory false
                },
                string "messageLanguage" {
                    length 7
                    role LOCALE
                },
                boolean "allowComments" ajaxTogglability {
                    defaultValue "1"
                    mandatory false
                },
						upload "imageUpload2" {
							defaultValue ""
							mandatory false
							maxSize "200k"
						},
						upload "imageUpload3" {
							defaultValue ""
							mandatory false
							maxSize "200k"
						},
						upload "imageUpload4" {
							mandatory false
							maxSize "200k"
						},
						datetime "startDate" nullable startDate {
							mandatory false
						displayType VIEW
                },
						boolean "noEndDate" ajaxTogglability {
                    defaultValue "1"
							mandatory false
						},
						datetime "endDate" nullable endDate {
							defaultValue ""
							mandatory false
						displayType VIEW
                }	
					,
						integer "weight" {
							defaultValue "1"
							mandatory false
                    displayType NONE
                    length 2
						}
            }
            actions {
                mainAction "Index",
                viewAction "View",
                displayAction "Display",
                editAction "Edit",
                deleteAction "Delete"
            }
				}	
				}
				
			variables {
				varContainer "GeneralSettings" {
					vars {
                boolVar "enableAttribution",
						boolVar "enableMultiLanguage",
						boolVar "enableEvents",
						boolVar "showAuthor" {
							value "1"
						},
						boolVar "showDate" {
							value "1"
						}
            }
        }
						,
        varContainer "CategorySettings" {
            sortOrder 2
            vars {
                boolVar "enableCategorization",
                boolVar "enableCategoryBasedPermissions"
            }
        },
        varContainer "DisplaySetting" {
            sortOrder 3
            vars {
                listVar "defaultMessageSorting" {
                    items {
                        listVarItem "ascending",
                        listVarItem default "descending"
                    }
                },
                boolVar "checkRefererOnPrint",
                boolVar "enableAjaxEditing",
                boolVar "enableMoreMessagesInCategory",
                boolVar "displayPdfLink",
                intVar "pdfLinkDisplayAccessLevel",
                filePathVar "pdfLinkHeaderLogo",
                intVar "pdfLinkHeaderLogoWidth",
                boolVar "pdfLinkEnableCache"
            }
        },
        varContainer "UploadSettings" {
            sortOrder 4
            vars {
                boolVar "enablePictureUpload",
                listVar "imageFloatOnViewPage" {
                    items {
                        listVarItem "none",
                        listVarItem "left",
                        listVarItem "right"
                    }
                },
                listVar "imageFloatOnDisplayPage" {
                    items {
                        listVarItem "none",
                        listVarItem "left",
                        listVarItem "right"
                    }
                },
                textVar "maxSize" {
                    value "200k"
                }
            }
        }
    }
}